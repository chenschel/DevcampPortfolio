<div>
  <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <div>
    <%= image_tag(portfolio_item.thumb_image, alt: portfolio_item.title) %>
  </div>
  <%= link_to('Edit', edit_portfolio_path(portfolio_item)) if logged_in?(:site_admin) %>
  <%= link_to('Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }) if logged_in?(:site_admin) %>
</div>
