<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag(portfolio_image(@portfolio.main_image.to_s, :main), alt: @portfolio.title) %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <% if @portfolio.technologies.any? %>
        <h2>Technologies used:</h2>

        <% @portfolio.technologies.each do |technology| %>
          <p><%= technology.name %></p>
        <% end %>
      <% end %>
    </div>
    <% if logged_in?(:site_admin) %>
      <div class="col-md-12">
        <hr>
        <%= link_to('Edit', edit_portfolio_path(@portfolio), class: 'btn btn-warning') %>
      </div>
    <% end %>
  </div>

</div>




