<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag(portfolio_image(@portfolio.main_image.to_s, :main), alt: @portfolio.title) %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <h2>Technologies used:</h2>

      <% @portfolio.technologies.each do |technology| %>
        <p><%= technology.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <%= link_to edit_portfolio_path(@portfolio) do %>
          Edit |
        <% end %>
      <% end %>
      <%= link_to 'View all Portfolio Items', portfolios_path %>
    </div>
  </div>

</div>




