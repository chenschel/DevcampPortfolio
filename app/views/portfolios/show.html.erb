<%= image_tag(@portfolio.main_image, alt: @portfolio.title) %>

<h1><%= @portfolio.title %></h1>

<em><%= @portfolio.subtitle %></em>

<p><%= @portfolio.body %></p>

<h2>Technologies used:</h2>

<% @portfolio.technologies.each do |technology| %>
  <p><%= technology.name %></p>
<% end %>

<% if logged_in?(:site_admin) %>
  <%= link_to edit_portfolio_path(@portfolio) do %>
    Edit |
  <% end %>
<% end %>
<%= link_to 'Back', portfolios_path %>
