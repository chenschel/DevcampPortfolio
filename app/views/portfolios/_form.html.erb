<%= form_with(model: portfolio, local: true) do |form| %>
  <div class="row">
    <% if portfolio.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
          <% portfolio.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title, for: :portfolio_title  %>
        <%= form.text_field :title, id: :portfolio_title, class: 'form-control', placeholder: :title %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle, for: :portfolio_subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control', placeholder: :subtitle %>
      </div>

      <div class="form-group">
        <div class="custom-file">
          <%= form.file_field :main_image, id: :portfolio_main_image, class: 'custom-file-input' %>
          <%= form.label :portfolio_main_image , 'Main Image', class: 'custom-file-label' %>
        </div>
      </div>

      <div class="form-group">
        <div class="custom-file">
          <%= form.file_field :thumb_image, id: :portfolio_thumb_image, class: 'custom-file-input', value: 'ahahaha' %>
          <%= form.label :portfolio_thumb_image, 'Thumbnail', class: 'custom-file-label' %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body, for: :portfolio_body %>
        <%= form.text_area :body, id: :portfolio_body, class: 'form-control', rows: 12, placeholder: :content %>
      </div>
    </div>



    <div class="col-md-12">
      <hr>
      <h4>Technologies used:</h4>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>


      <div class="form-group">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
