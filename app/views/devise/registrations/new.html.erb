<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= t('.sign_up') %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-md-6">

          <div class="form-group">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, tabindex: 1, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :name %><br/>
            <%= f.text_field :name, tabindex: 2, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit t('.sign_up'), class: 'btn btn-primary', tabindex: 5 %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off", tabindex: 3, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", tabindex: 4, class: 'form-control' %>
          </div>
        </div>

        <div class="auth-links">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
