<!DOCTYPE html>
<html>
  <head>
    <title>DevcampPortfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if session[:source].present? %>
    <p>
      <%= "Thanks for following me on #{session[:source]}" %>
    </p>
    <% end %>
    <%= "Hi, #{current_user.first_name} " if user_signed_in? %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) if user_signed_in? %>
    <%= link_to('Login', new_user_session_path) unless user_signed_in? %>
    <%= link_to('Register', new_user_registration_path) unless user_signed_in? %>

    <%= yield %>
  </body>
</html>
