<%= form_with(model: blog, local: true) do |form| %>
  <%= render 'shared/form_errors', form_item: blog %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id,
                               Topic.all,
                               :id,
                               :title,
                               {
                                   selected: blog&.topic&.id,
                                   include_blank: true
                               },
                               class: 'form-control'
        ) %>
  </div>

  <div class="form-group">
    <%= form.radio_button :status, 'draft', id: :blog_status_draft %>
    <%= form.label :status, 'Draft', for: :blog_status_draft %>

    <%= form.radio_button :status, 'published', id: :blog_status_published %>
    <%= form.label :status, 'Published', for: :blog_status_published %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
