<p id="notice"><%= notice %></p>

<%= render @blog, actions: %i[status edit destroy] %>

<% unless current_user.is_a?(GuestUser) %>
  <%= form_with(model: @comment, url: '#', local: true) do |form| %>
    <%= render 'shared/form_errors', form_item: @comment %>

    <div class="form-group">
      <%= form.label :comment_content %>
      <%= form.text_area :content,
                         id: :comment_content,
                         class: 'form-control',
                         rows: 3
      %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>

