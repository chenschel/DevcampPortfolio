<div class="comment-card">
    <div class="card">
        <div class="card-body">
            <p class="card-text">
              <div class="row">
                <div class="col-md-1">
                  <%= avatar_helper(comment) %>
                </div>
                <div class="col-md-11">
                  <div>
                    <%= comment.content %>
                  </div>
                  <div class="comment-attribution">
                    Comment posted by <span class="comment-name"><%= comment.user.name %></span> - <%= distance_of_time_in_words(Time.current, comment.created_at) %>
                  </div>
                </div>
              </div>
            </p>
        </div>
    </div>
</div>
